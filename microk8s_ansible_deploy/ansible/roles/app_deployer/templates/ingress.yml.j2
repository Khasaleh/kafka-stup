---
{% if app.ingress is defined %}
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: "{{ app.name }}-ingress"
  namespace: "{{ app.namespace | default('default') }}"
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
  {% for rule in app.ingress %}
  - host: "{{ env }}-{{ rule.host }}"
    http:
      paths:
      - path: "{{ rule.path }}"
        pathType: "{{ rule.pathType }}"
        backend:
          service:
            name: "{{ app.name }}-service"
            port:
              number: {{ rule.port }}
  {% endfor %}
  {% if app.tls is defined %}
  tls:
  - hosts:
    {% for host in app.tls.hosts %}
    - "{{ env }}-{{ host }}"
    {% endfor %}
    secretName: "{{ app.tls.secretName }}"
  {% endif %}
{% endif %}

{% if app.name == 'config-server' %}
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: config-server-ingress
  namespace: default
spec:
  rules:
  - host: "{{ env }}-config.fazeal.com"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: config-server-service
            port:
              number: 80
{% endif %}
