---
apiVersion: v1
kind: Secret
metadata:
  name: "{{ app_name }}-secret"
  namespace: "{{ app_namespace | default('default') }}"
  labels:
    app: "{{ app_name }}"
type: Opaque
data:
  SERVICE_NAME: "{{ app_name | b64encode }}"
  DEPLOYMENT_MODE: "{{ ('refactored' if use_refactored_config else 'legacy') | b64encode }}"
  SECRET_VERSION: "{{ '1.0' | b64encode }}" 