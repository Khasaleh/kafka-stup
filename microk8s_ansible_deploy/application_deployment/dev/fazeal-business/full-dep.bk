---
apiVersion: v1
kind: ConfigMap
metadata:
  name: fazeal-business-config
  namespace: default
  labels:
    app: fazeal-business
data:
  SERVICE_NAME: "fazeal-business"
  NAMESPACE: "default"
  ENVIRONMENT: "dev"
  LOG_LEVEL: "INFO"
  spring.profiles.active: "dev"
  server.port: "80"

  # Discovery
  DISCOVERY_URL: "http://192.168.1.212:8761"
  CONFIG_URL: "http://config-server"
  eureka.instance.ip-address: "fazeal-business"
  eureka.instance.prefer-ip-address: "true"

  # Database
  BUSINESS_DB_HOST: "192.168.1.213"
  DB_PORT: "5432"
  SPRING_DATASOURCE_URL: "jdbc:postgresql://192.168.1.213:5432/fazealbusiness?currentSchema=public"

  # Redis
  REDIS_HOST: "192.168.1.217"
  REDIS_PORT: "6379"

  # Kafka
  spring.kafka.producer.bootstrap-servers: "192.168.1.225:29093,192.168.1.225:39093"
  spring.kafka.consumer.bootstrap-servers: "192.168.1.225:29093,192.168.1.225:39093"
  spring.cloud.stream.kafka.binder.brokers: "192.168.1.225:29093,192.168.1.225:39093"

  # External API Dependencies
  HOST_NAME: "http://fazeal-business:80"
  album-api.base: "http://album-service:80"
  album-api.name: "album-api-client"
  promotion-service-api.base: "http://promotion-service:80/api/v1"
  order-service-api.base: "http://order-service:80/api/v1"
  payment-service-api.base: "http://payment-service:80"
  user-notification-service-api.base: "http://notification-service:80"
  fazeal-business-admin-management-service-api.base: "http://fazeal-business-management:80"
  restaurant-service-api.base: "http://restaurant-catalog-service:80"
  reservation-service-api.base: "http://restaurant-reservation-service:80/api/v1"
  loyalty-service-api.base: "http://loyalty-service:80"
  customer-service-api.base: "http://customer-service:80"
  site-management-service-api.base: "http://site-management-service:80/api/v1"
  inventory-service-api.base: "http://inventory-service:80/api/v1"
  catalog-service-api.base: "http://catalog-service:80/api/v1"
  stripe-payment-service-api.base: "http://payment-service:80/api/v1/stripepayments"
  paypal-payment-service-api.base: "http://payment-service:80/api/v1/paypalpayments"
  chirps-delete-service.base: "https://dev-elastic.fazeal.com/fazeal-products-v1/_delete_by_query"
  chirps-create-service.base: "https://dev-elastic.fazeal.com/fazeal-products-v1/_doc"
  chirps-search-service.base: "https://dev-elastic.fazeal.com/fazeal-products-v1/_search"
  fazeal-social-service-api.base: "http://api-server:80"
---
apiVersion: v1
kind: Secret
metadata:
  name: fazeal-business-secret
  namespace: default
  labels:
    app: fazeal-business
type: Opaque
data:
  DB_USER: YWRtaW4=
  DB_PASSWORD: bmV3MjAyNQ==
  REDIS_PASSWORD: YWRtaW4xMjM0
  JWT_SECRET: and0X3NlY3JldF9rZXlfZm9yX2ZhemVhbC1idXNpbmVzc18yMDI0
  # NEW: base64 of your 32-byte key string (example placeholder below)
  ENCRYPTION_SECRET_KEY: PFlPVVJfQkFTRTY0X0tFWV9IRVJFPg==
---
apiVersion: v1
kind: Service
metadata:
  name: fazeal-business
  namespace: default
  labels:
    app: fazeal-business
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: 80
      protocol: TCP
      name: http
  selector:
    app: fazeal-business
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: fazeal-business
  namespace: default
  labels:
    app: fazeal-business
spec:
  replicas: 2
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: fazeal-business
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
  template:
    metadata:
      labels:
        app: fazeal-business
    spec:
      dnsPolicy: ClusterFirst
      imagePullSecrets:
        - name: dockerhub-secret
      restartPolicy: Always
      terminationGracePeriodSeconds: 30

      initContainers:
        - name: wait-for-postgres
          image: busybox:1.36
          command: ["/bin/sh","-c"]
          args:
            - |
              echo "Waiting for ${DB_HOST}:${DB_PORT}...";
              until nc -z ${DB_HOST} ${DB_PORT}; do sleep 2; done;
              echo "Postgres is reachable.";
          env:
            - name: DB_HOST
              valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: BUSINESS_DB_HOST } }
            - name: DB_PORT
              valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: DB_PORT } }

      containers:
        - name: fazeal-business
          image: khsaleh889/familymicroservices:$IMAGE
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 80
              protocol: TCP

          env:
            - { name: SERVICE_NAME, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: SERVICE_NAME } } }
            - { name: NAMESPACE, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: NAMESPACE } } }
            - { name: ENVIRONMENT, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: ENVIRONMENT } } }
            - { name: LOG_LEVEL, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: LOG_LEVEL } } }
            - { name: spring.profiles.active, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: spring.profiles.active } } }
            - { name: server.port, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: server.port } } }
            - { name: DISCOVERY_URL, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: DISCOVERY_URL } } }
            - { name: CONFIG_URL, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: CONFIG_URL } } }
            - { name: eureka.instance.ip-address, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: eureka.instance.ip-address } } }
            - { name: eureka.instance.prefer-ip-address, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: eureka.instance.prefer-ip-address } } }
            - { name: SPRING_DATASOURCE_URL, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: SPRING_DATASOURCE_URL } } }
            - { name: SPRING_DATASOURCE_USERNAME, valueFrom: { secretKeyRef: { name: fazeal-business-secret, key: DB_USER } } }
            - { name: SPRING_DATASOURCE_PASSWORD, valueFrom: { secretKeyRef: { name: fazeal-business-secret, key: DB_PASSWORD } } }
            - { name: REDIS_HOST, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: REDIS_HOST } } }
            - { name: REDIS_PORT, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: REDIS_PORT } } }
            - { name: REDIS_PASSWORD, valueFrom: { secretKeyRef: { name: fazeal-business-secret, key: REDIS_PASSWORD } } }
            - { name: JWT_SECRET, valueFrom: { secretKeyRef: { name: fazeal-business-secret, key: JWT_SECRET } } }

            # NEW: provides encryption.secret.key to Spring via env
            - { name: ENCRYPTION_SECRET_KEY, valueFrom: { secretKeyRef: { name: fazeal-business-secret, key: ENCRYPTION_SECRET_KEY } } }

            - { name: spring.kafka.producer.bootstrap-servers, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: spring.kafka.producer.bootstrap-servers } } }
            - { name: spring.kafka.consumer.bootstrap-servers, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: spring.kafka.consumer.bootstrap-servers } } }
            - { name: spring.cloud.stream.kafka.binder.brokers, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: spring.cloud.stream.kafka.binder.brokers } } }
            - { name: HOST_NAME, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: HOST_NAME } } }
            - { name: album-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: album-api.base } } }
            - { name: album-api.name, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: album-api.name } } }
            - { name: promotion-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: promotion-service-api.base } } }
            - { name: order-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: order-service-api.base } } }
            - { name: payment-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: payment-service-api.base } } }
            - { name: user-notification-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: user-notification-service-api.base } } }
            - { name: fazeal-business-admin-management-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: fazeal-business-admin-management-service-api.base } } }
            - { name: restaurant-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: restaurant-service-api.base } } }
            - { name: reservation-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: reservation-service-api.base } } }
            - { name: loyalty-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: loyalty-service-api.base } } }
            - { name: customer-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: customer-service-api.base } } }
            - { name: site-management-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: site-management-service-api.base } } }
            - { name: inventory-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: inventory-service-api.base } } }
            - { name: catalog-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: catalog-service-api.base } } }
            - { name: stripe-payment-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: stripe-payment-service-api.base } } }
            - { name: paypal-payment-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: paypal-payment-service-api.base } } }
            - { name: chirps-delete-service.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: chirps-delete-service.base } } }
            - { name: chirps-create-service.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: chirps-create-service.base } } }
            - { name: chirps-search-service.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: chirps-search-service.base } } }
            - { name: fazeal-social-service-api.base, valueFrom: { configMapKeyRef: { name: fazeal-business-config, key: fazeal-social-service-api.base } } }

          startupProbe:
            tcpSocket: { port: 80 }
            periodSeconds: 5
            timeoutSeconds: 3
            failureThreshold: 60
          readinessProbe:
            tcpSocket: { port: 80 }
            initialDelaySeconds: 20
            periodSeconds: 10
            timeoutSeconds: 3
            failureThreshold: 3
          livenessProbe:
            tcpSocket: { port: 80 }
            initialDelaySeconds: 60
            periodSeconds: 20
            timeoutSeconds: 5
            failureThreshold: 3

          resources:
            requests:
              cpu: "500m"
              memory: "1Gi"
            limits:
              cpu: "1000m"
              memory: "2Gi"
---
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: fazeal-business-hpa
  namespace: default
  labels:
    app: fazeal-business
    component: hpa
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: fazeal-business
  minReplicas: 2
  maxReplicas: 10
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 70
  - type: Resource
    resource:
      name: memory
      target:
        type: Utilization
        averageUtilization: 70
  behavior:
    scaleUp:
      stabilizationWindowSeconds: 60
      policies:
      - type: Percent
        value: 100
        periodSeconds: 15
      - type: Pods
        value: 2
        periodSeconds: 15
      selectPolicy: Max
    scaleDown:
      stabilizationWindowSeconds: 300
      policies:
      - type: Percent
        value: 10
        periodSeconds: 60
      - type: Pods
        value: 1
        periodSeconds: 60
      selectPolicy: Max
---
apiVersion: policy/v1
kind: PodDisruptionBudget
metadata:
  name: fazeal-business-pdb
  namespace: default
  labels:
    app: fazeal-business
    component: pdb
spec:
  minAvailable: 50%
  selector:
    matchLabels:
      app: fazeal-business
