---
apiVersion: v1
kind: ConfigMap
metadata:
  name: payment-gateway-config
  namespace: default
  labels:
    app: payment-gateway
data:
  SERVICE_NAME: "payment-gateway"
  NAMESPACE: "default"
  ENVIRONMENT: "dev"
  LOG_LEVEL: "INFO"
  server.port: "80"

  # Discovery
  DISCOVERY_URL: "http://192.168.1.211:8761"
  CONFIG_URL: "http://config-server"
  eureka.instance.ip-address: "payment-gateway"
  spring.batch.job.enabled: "false"
  spring.profiles.active: "dev"

  # Database
  DB_HOST: "192.168.1.213"
  DB_PORT: "5432"
  SPRING_DATASOURCE_URL: "jdbc:postgresql://192.168.1.213:5432/payment_service?currentSchema=public"

  # Redis
  REDIS_HOST: "192.168.1.217"
  REDIS_PORT: "6379"
  
  # S3
  amazonProperties.endpointUrl: "https://s3.us-east-1.wasabisys.com/fazeal-social-nonprod.fazeal.com"
  amazonProperties.bucketName: "fazeal-social-nonprod.fazeal.com"
  amazonProperties.assetsBucketName: "fazeal-ui-assets.fazeal.com"

  # External API Dependencies
  payment-service-api.base: "http://payment-service:80"
---
apiVersion: v1
kind: Secret
metadata:
  name: payment-gateway-secret
  namespace: default
  labels:
    app: payment-gateway
type: Opaque
data:
  DB_USER: YWRtaW4=
  DB_PASSWORD: bmV3MjAyNQ==
  REDIS_PASSWORD: YWRtaW4xMjM0
  amazonProperties.accessKey: "VVU1MUJSWVFSOEpKSkQyWDBTMTE="
  amazonProperties.secretKey: "aXMzYTNSZWtUYlFIdHNFQTAydFVBYW40Q3pIU3VpQTdodFA2a2xScA=="
  AWS_ACCESS_KEY: "VVU1MUJSWVFSOEpKSkQyWDBTMTE="
  AWS_SECRET_KEY: "aXMzYTNSZWtUYlFIdHNFQTAydFVBYW40Q3pIU3VpQTdodFA2a2xScA=="
  amazonProperties.assetsSecretKey: "aXMzYTNSZWtUYlFIdHNFQTAydFVBYW40Q3pIU3VpQTdodFA2a2xScA=="
  amazonProperties.assetsAccessKey: "VVU1MUJSWVFSOEpKSkQyWDBTMTE="
---
apiVersion: v1
kind: Service
metadata:
  name: payment-gateway
  namespace: default
  labels:
    app: payment-gateway
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: 80
      protocol: TCP
      name: http
  selector:
    app: payment-gateway
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: payment-gateway
  namespace: default
  labels:
    app: payment-gateway
spec:
  replicas: 2
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: payment-gateway
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
  template:
    metadata:
      labels:
        app: payment-gateway
    spec:
      dnsPolicy: ClusterFirst
      imagePullSecrets:
        - name: dockerhub-secret
      restartPolicy: Always
      terminationGracePeriodSeconds: 30

      initContainers:
        - name: wait-for-postgres
          image: busybox:1.36
          command: ["/bin/sh","-c"]
          args:
            - |
              echo "Waiting for ${DB_HOST}:${DB_PORT}...";
              until nc -z ${DB_HOST} ${DB_PORT}; do sleep 2; done;
              echo "Postgres is reachable.";
          env:
            - name: DB_HOST
              valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: DB_HOST } }
            - name: DB_PORT
              valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: DB_PORT } }

      containers:
        - name: payment-gateway
          image: khsaleh889/familymicroservices:$IMAGE
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 80
              protocol: TCP

          env:
            - { name: SERVICE_NAME, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: SERVICE_NAME } } }
            - { name: SPRING_DATASOURCE_URL, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: SPRING_DATASOURCE_URL } } }
            - { name: SPRING_DATASOURCE_USERNAME, valueFrom: { secretKeyRef: { name: payment-gateway-secret, key: DB_USER } } }
            - { name: SPRING_DATASOURCE_PASSWORD, valueFrom: { secretKeyRef: { name: payment-gateway-secret, key: DB_PASSWORD } } }
            - { name: REDIS_PASSWORD, valueFrom: { secretKeyRef: { name: payment-gateway-secret, key: REDIS_PASSWORD } } }
            - { name: amazonProperties.accessKey, valueFrom: { secretKeyRef: { name: payment-gateway-secret, key: "amazonProperties.accessKey" } } }
            - { name: amazonProperties.secretKey, valueFrom: { secretKeyRef: { name: payment-gateway-secret, key: "amazonProperties.secretKey" } } }
            - { name: AWS_ACCESS_KEY, valueFrom: { secretKeyRef: { name: payment-gateway-secret, key: AWS_ACCESS_KEY } } }
            - { name: AWS_SECRET_KEY, valueFrom: { secretKeyRef: { name: payment-gateway-secret, key: AWS_SECRET_KEY } } }
            - { name: amazonProperties.assetsSecretKey, valueFrom: { secretKeyRef: { name: payment-gateway-secret, key: "amazonProperties.assetsSecretKey" } } }
            - { name: amazonProperties.assetsAccessKey, valueFrom: { secretKeyRef: { name: payment-gateway-secret, key: "amazonProperties.assetsAccessKey" } } }
            - { name: NAMESPACE, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: NAMESPACE } } }
            - { name: ENVIRONMENT, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: ENVIRONMENT } } }
            - { name: LOG_LEVEL, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: LOG_LEVEL } } }
            - { name: server.port, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: server.port } } }
            - { name: DISCOVERY_URL, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: DISCOVERY_URL } } }
            - { name: CONFIG_URL, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: CONFIG_URL } } }
            - { name: eureka.instance.ip-address, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: eureka.instance.ip-address } } }
            - { name: spring.batch.job.enabled, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: spring.batch.job.enabled } } }
            - { name: spring.profiles.active, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: spring.profiles.active } } }
            - { name: REDIS_HOST, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: REDIS_HOST } } }
            - { name: REDIS_PORT, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: REDIS_PORT } } }
            - { name: amazonProperties.endpointUrl, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: amazonProperties.endpointUrl } } }
            - { name: amazonProperties.bucketName, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: amazonProperties.bucketName } } }
            - { name: amazonProperties.assetsBucketName, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: amazonProperties.assetsBucketName } } }
            - { name: payment-service-api.base, valueFrom: { configMapKeyRef: { name: payment-gateway-config, key: payment-service-api.base } } }

          startupProbe:
            tcpSocket: { port: 80 }
            periodSeconds: 5
            timeoutSeconds: 3
            failureThreshold: 60
          readinessProbe:
            tcpSocket: { port: 80 }
            initialDelaySeconds: 20
            periodSeconds: 10
            timeoutSeconds: 3
            failureThreshold: 3
          livenessProbe:
            tcpSocket: { port: 80 }
            initialDelaySeconds: 60
            periodSeconds: 20
            timeoutSeconds: 5
            failureThreshold: 3

          resources:
            requests:
              cpu: "500m"
              memory: "1Gi"
            limits:
              cpu: "1000m"
              memory: "2Gi"
---
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: payment-gateway-hpa
  namespace: default
  labels:
    app: payment-gateway
    component: hpa
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: payment-gateway
  minReplicas: 2
  maxReplicas: 8
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 70
  - type: Resource
    resource:
      name: memory
      target:
        type: Utilization
        averageUtilization: 70
  behavior:
    scaleUp:
      stabilizationWindowSeconds: 60
      policies:
      - type: Percent
        value: 100
        periodSeconds: 15
      - type: Pods
        value: 2
        periodSeconds: 15
      selectPolicy: Max
    scaleDown:
      stabilizationWindowSeconds: 300
      policies:
      - type: Percent
        value: 10
        periodSeconds: 60
      - type: Pods
        value: 1
        periodSeconds: 60
      selectPolicy: Max
---
apiVersion: policy/v1
kind: PodDisruptionBudget
metadata:
  name: payment-gateway-pdb
  namespace: default
  labels:
    app: payment-gateway
    component: pdb
spec:
  minAvailable: 50%
  selector:
    matchLabels:
      app: payment-gateway
