---
apiVersion: v1
kind: ConfigMap
metadata:
  name: promotion-service-config
  namespace: default
  labels:
    app: promotion-service
data:
  SERVICE_NAME: "promotion-service"
  NAMESPACE: "default"
  ENVIRONMENT: "dev"
  LOG_LEVEL: "INFO"
  server.port: "80"

  # Discovery (dev)
  DISCOVERY_URL: "http://192.168.1.212:8761"
  CONFIG_URL: "http://config-server"
  eureka.instance.ip-address: "promotion-service"
  eureka.instance.prefer-ip-address: "true"
  spring.profiles.active: "dev"
  spring.main.allow-circular-references: "true"

  # Database (dev)
  DB_HOST: "192.168.1.213"
  DB_PORT: "5432"
  SPRING_DATASOURCE_URL: "jdbc:postgresql://192.168.1.213:5432/promotion_service?currentSchema=public"

  # Redis (dev)
  REDIS_HOST: "192.168.1.217"
  REDIS_PORT: "6379"

  # External API Dependencies
  promotion-service-api.base: "http://promotion-service:80/api/v1"
  customer-service-api.base: "http://customer-service:80"
  fazeal-social-service-api.base: "http://api-server:80"
  catalog-service-api.base: "http://catalog-service:80/api/v1"
---
apiVersion: v1
kind: Secret
metadata:
  name: promotion-service-secret
  namespace: default
  labels:
    app: promotion-service
type: Opaque
data:
  # admin / new2025 (as used across dev)
  DB_USER: YWRtaW4=
  DB_PASSWORD: bmV3MjAyNQ==
  REDIS_PASSWORD: YWRtaW4xMjM0
---
apiVersion: v1
kind: Service
metadata:
  name: promotion-service
  namespace: default
  labels:
    app: promotion-service
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: 80
      protocol: TCP
      name: http
  selector:
    app: promotion-service
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: promotion-service
  namespace: default
  labels:
    app: promotion-service
spec:
  replicas: 2
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: promotion-service
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
  template:
    metadata:
      labels:
        app: promotion-service
    spec:
      dnsPolicy: ClusterFirst
      imagePullSecrets:
        - name: dockerhub-secret
      restartPolicy: Always
      terminationGracePeriodSeconds: 30

      initContainers:
        - name: wait-for-postgres
          image: busybox:1.36
          command: ["/bin/sh","-c"]
          args:
            - |
              echo "Waiting for ${DB_HOST}:${DB_PORT} (Postgres)…";
              i=0; until nc -z ${DB_HOST} ${DB_PORT}; do i=$((i+1)); if [ "$i" -ge 300 ]; then echo "Postgres unreachable after ~10m"; exit 1; fi; sleep 2; done;
              echo "Postgres is reachable.";
          env:
            - name: DB_HOST
              valueFrom: { configMapKeyRef: { name: promotion-service-config, key: DB_HOST } }
            - name: DB_PORT
              valueFrom: { configMapKeyRef: { name: promotion-service-config, key: DB_PORT } }

        - name: wait-for-redis
          image: busybox:1.36
          command: ["/bin/sh","-c"]
          args:
            - |
              echo "Waiting for ${REDIS_HOST}:${REDIS_PORT} (Redis)…";
              i=0; until nc -z ${REDIS_HOST} ${REDIS_PORT}; do i=$((i+1)); if [ "$i" -ge 300 ]; then echo "Redis unreachable after ~10m"; exit 1; fi; sleep 2; done;
              echo "Redis is reachable.";
          env:
            - name: REDIS_HOST
              valueFrom: { configMapKeyRef: { name: promotion-service-config, key: REDIS_HOST } }
            - name: REDIS_PORT
              valueFrom: { configMapKeyRef: { name: promotion-service-config, key: REDIS_PORT } }

      containers:
        - name: promotion-service
          image: khsaleh889/familymicroservices:promotion-service-640-kube-multi
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 80
              protocol: TCP

          env:
            - { name: SERVICE_NAME, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: SERVICE_NAME } } }
            - { name: NAMESPACE, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: NAMESPACE } } }
            - { name: ENVIRONMENT, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: ENVIRONMENT } } }
            - { name: LOG_LEVEL, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: LOG_LEVEL } } }
            - { name: server.port, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: server.port } } }

            # Profiles & Spring knobs
            - { name: spring.profiles.active, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: spring.profiles.active } } }
            - { name: spring.main.allow-circular-references, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: spring.main.allow-circular-references } } }

            # Discovery / eureka
            - { name: DISCOVERY_URL, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: DISCOVERY_URL } } }
            - { name: CONFIG_URL, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: CONFIG_URL } } }
            - { name: eureka.instance.ip-address, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: eureka.instance.ip-address } } }
            - { name: eureka.instance.prefer-ip-address, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: eureka.instance.prefer-ip-address } } }

            # Datasource
            - { name: SPRING_DATASOURCE_URL, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: SPRING_DATASOURCE_URL } } }
            - { name: SPRING_DATASOURCE_USERNAME, valueFrom: { secretKeyRef: { name: promotion-service-secret, key: DB_USER } } }
            - { name: SPRING_DATASOURCE_PASSWORD, valueFrom: { secretKeyRef: { name: promotion-service-secret, key: DB_PASSWORD } } }

            # Redis (set both generic & Spring variants to avoid localhost fallback)
            - { name: REDIS_HOST, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: REDIS_HOST } } }
            - { name: REDIS_PORT, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: REDIS_PORT } } }
            - { name: REDIS_PASSWORD, valueFrom: { secretKeyRef: { name: promotion-service-secret, key: REDIS_PASSWORD } } }
            - { name: SPRING_REDIS_HOST, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: REDIS_HOST } } }
            - { name: SPRING_REDIS_PORT, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: REDIS_PORT } } }
            - { name: SPRING_REDIS_PASSWORD, valueFrom: { secretKeyRef: { name: promotion-service-secret, key: REDIS_PASSWORD } } }

            # External deps
            - { name: promotion-service-api.base, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: promotion-service-api.base } } }
            - { name: customer-service-api.base, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: customer-service-api.base } } }
            - { name: fazeal-social-service-api.base, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: fazeal-social-service-api.base } } }
            - { name: catalog-service-api.base, valueFrom: { configMapKeyRef: { name: promotion-service-config, key: catalog-service-api.base } } }

          startupProbe:
            tcpSocket: { port: 80 }
            periodSeconds: 5
            timeoutSeconds: 3
            failureThreshold: 120
          readinessProbe:
            tcpSocket: { port: 80 }
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 6
          livenessProbe:
            tcpSocket: { port: 80 }
            initialDelaySeconds: 120
            periodSeconds: 20
            timeoutSeconds: 5
            failureThreshold: 3

          resources:
            requests:
              cpu: "500m"
              memory: "1Gi"
            limits:
              cpu: "1000m"
              memory: "2Gi"
---
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: promotion-service-hpa
  namespace: default
  labels:
    app: promotion-service
    component: hpa
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: promotion-service
  minReplicas: 2
  maxReplicas: 10
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 70
    - type: Resource
      resource:
        name: memory
        target:
          type: Utilization
          averageUtilization: 70
  behavior:
    scaleUp:
      stabilizationWindowSeconds: 60
      policies:
        - type: Percent
          value: 100
          periodSeconds: 15
        - type: Pods
          value: 2
          periodSeconds: 15
      selectPolicy: Max
    scaleDown:
      stabilizationWindowSeconds: 300
      policies:
        - type: Percent
          value: 10
          periodSeconds: 60
        - type: Pods
          value: 1
          periodSeconds: 60
      selectPolicy: Max
---
apiVersion: policy/v1
kind: PodDisruptionBudget
metadata:
  name: promotion-service-pdb
  namespace: default
  labels:
    app: promotion-service
    component: pdb
spec:
  minAvailable: 50%
  selector:
    matchLabels:
      app: promotion-service
