---
apiVersion: v1
kind: ConfigMap
metadata:
  name: cron-jobs-config
  namespace: default
  labels:
    app: cron-jobs
data:
  SERVICE_NAME: "cron-jobs"
  NAMESPACE: "default"
  ENVIRONMENT: "dev"
  LOG_LEVEL: "INFO"
  DB_HOST: "192.168.1.213"
  spring.profiles.active: "dev"
  loyalty-service-api.base: "http://loyalty-service:80"
  events-api.base: "http://events-service:80"
  posts-service.base: "http://posts-service:80"
  fazeal-business-admin-service-api.base: "http://fazeal-business:80"

---
apiVersion: v1
kind: Secret
metadata:
  name: cron-jobs-secret
  namespace: default
  labels:
    app: cron-jobs
type: Opaque
data:
  SERVICE_NAME: "Y3Jvbi1qb2Jz"   # base64(cron-jobs)
  DB_USER: "YWRtaW4="            # base64(admin)
  DB_PASSWORD: "bmV3MjAyNQ=="    # base64(new2025)

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cron-jobs
  namespace: default
  labels:
    app: cron-jobs
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cron-jobs
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
  template:
    metadata:
      labels:
        app: cron-jobs
    spec:
      imagePullSecrets:
        - name: dockerhub-secret
      containers:
        - name: cron-jobs
          image: khsaleh889/familymicroservices:$IMAGE
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8011
              name: http
              protocol: TCP
          env:
            - name: SERVICE_NAME
              valueFrom:
                configMapKeyRef:
                  name: cron-jobs-config
                  key: SERVICE_NAME
            - name: NAMESPACE
              valueFrom:
                configMapKeyRef:
                  name: cron-jobs-config
                  key: NAMESPACE
            - name: ENVIRONMENT
              valueFrom:
                configMapKeyRef:
                  name: cron-jobs-config
                  key: ENVIRONMENT
            - name: LOG_LEVEL
              valueFrom:
                configMapKeyRef:
                  name: cron-jobs-config
                  key: LOG_LEVEL
            - name: DB_HOST
              valueFrom:
                configMapKeyRef:
                  name: cron-jobs-config
                  key: DB_HOST
            - name: spring.profiles.active
              valueFrom:
                configMapKeyRef:
                  name: cron-jobs-config
                  key: spring.profiles.active
            - name: loyalty-service-api.base
              valueFrom:
                configMapKeyRef:
                  name: cron-jobs-config
                  key: loyalty-service-api.base
            - name: events-api.base
              valueFrom:
                configMapKeyRef:
                  name: cron-jobs-config
                  key: events-api.base
            - name: posts-service.base
              valueFrom:
                configMapKeyRef:
                  name: cron-jobs-config
                  key: posts-service.base
            - name: fazeal-business-admin-service-api.base
              valueFrom:
                configMapKeyRef:
                  name: cron-jobs-config
                  key: fazeal-business-admin-service-api.base
            - name: DB_USER
              valueFrom:
                secretKeyRef:
                  name: cron-jobs-secret
                  key: DB_USER
            - name: DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: cron-jobs-secret
                  key: DB_PASSWORD
          startupProbe:
            tcpSocket:
              port: 8011
            periodSeconds: 5
            timeoutSeconds: 3
            failureThreshold: 60   # ~5 min warmup
          readinessProbe:
            tcpSocket:
              port: 8011
            initialDelaySeconds: 20
            periodSeconds: 10
            timeoutSeconds: 3
            failureThreshold: 3
          livenessProbe:
            tcpSocket:
              port: 8011
            initialDelaySeconds: 60
            periodSeconds: 20
            timeoutSeconds: 5
            failureThreshold: 3
          resources:
            requests:
              memory: "512Mi"
              cpu: "250m"
            limits:
              memory: "1Gi"
              cpu: "500m"

---
apiVersion: v1
kind: Service
metadata:
  name: cron-jobs
  namespace: default
  labels:
    app: cron-jobs
spec:
  type: ClusterIP
  ports:
    - port: 8011
      targetPort: 8011
      protocol: TCP
      name: http
  selector:
    app: cron-jobs

---
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: cron-jobs-hpa
  labels:
    app: cron-jobs
    component: hpa
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: cron-jobs
  minReplicas: 1
  maxReplicas: 3
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 70
    - type: Resource
      resource:
        name: memory
        target:
          type: Utilization
          averageUtilization: 70
  behavior:
    scaleUp:
      stabilizationWindowSeconds: 60
      policies:
        - type: Percent
          value: 100
          periodSeconds: 15
        - type: Pods
          value: 2
          periodSeconds: 15
      selectPolicy: Max
    scaleDown:
      stabilizationWindowSeconds: 300
      policies:
        - type: Percent
          value: 10
          periodSeconds: 60
        - type: Pods
          value: 1
          periodSeconds: 60
      selectPolicy: Max

---
apiVersion: policy/v1
kind: PodDisruptionBudget
metadata:
  name: cron-jobs-pdb
  labels:
    app: cron-jobs
    component: pdb
spec:
  minAvailable: 1
  selector:
    matchLabels:
      app: cron-jobs
